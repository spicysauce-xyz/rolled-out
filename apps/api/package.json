{
  "name": "@mono/api",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/shared.d.ts"
    }
  },
  "scripts": {
    "dev": "pnpm build:types && pnpm build:module --watch --onSuccess 'node dist/index.js'",
    "build": "pnpm build:module & pnpm build:types",
    "build:module": "tsup --entry index.ts --entry scripts/*.ts --format esm",
    "build:types": "tsc --emitDeclarationOnly --declaration",
    "start": "node dist/index.js",
    "email:dev": "email dev --port 3123 --dir src/email/templates"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.826.0",
    "@aws-sdk/s3-presigned-post": "^3.826.0",
    "@aws-sdk/s3-request-presigner": "^3.826.0",
    "@hocuspocus/transformer": "^3.1.3",
    "@hono/event-emitter": "^2.0.0",
    "@hono/node-server": "^1.14.3",
    "@hono/node-ws": "^1.1.7",
    "@hono/zod-validator": "^0.4.3",
    "@mono/auth": "workspace:*",
    "@mono/db": "workspace:*",
    "@mono/editor": "workspace:*",
    "@react-email/components": "0.0.41",
    "@types/lodash": "^4.17.17",
    "better-auth": "^1.2.8",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.40.0",
    "eventemitter2": "^6.4.9",
    "hono": "catalog:",
    "lodash": "^4.17.21",
    "neverthrow": "^8.2.0",
    "pg": "^8.13.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^4.5.1",
    "slugify": "^1.6.6",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "uuid": "^11.1.0",
    "yjs": "^13.6.27",
    "zod": "^3.25.48"
  },
  "devDependencies": {
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.11.11",
    "@types/react": "^18.3.23",
    "react-email": "4.0.16",
    "typescript": "catalog:"
  }
}
