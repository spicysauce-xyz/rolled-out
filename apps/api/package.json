{
  "name": "@mono/api",
  "type": "module",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/shared.d.ts"
    }
  },
  "scripts": {
    "dev": "tsup index.ts --watch --onSuccess 'tsc --emitDeclarationOnly --declaration & node dist/index.js' --format esm",
    "build": "tsup --entry index.ts --entry scripts/*.ts --format esm",
    "start": "node dist/index.js",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "email:dev": "email dev --port 3123 --dir src/email/templates"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.826.0",
    "@aws-sdk/s3-presigned-post": "^3.826.0",
    "@aws-sdk/s3-request-presigner": "^3.826.0",
    "@hocuspocus/extension-database": "^3.1.3",
    "@hocuspocus/server": "^3.1.3",
    "@hono/node-server": "^1.14.3",
    "@hono/node-ws": "^1.1.7",
    "@hono/zod-validator": "^0.4.3",
    "@react-email/components": "0.0.41",
    "better-auth": "^1.2.8",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.40.0",
    "hono": "^4.7.2",
    "pg": "^8.13.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "resend": "^4.5.1",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "uuid": "^11.1.0",
    "zod": "^3.25.48"
  },
  "devDependencies": {
    "@total-typescript/tsconfig": "^1.0.4",
    "@types/node": "^22.15.29",
    "@types/pg": "^8.11.11",
    "@types/react": "^18.3.23",
    "drizzle-kit": "^0.30.5",
    "react-email": "4.0.16",
    "typescript": "5.8.2"
  }
}
